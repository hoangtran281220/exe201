                    <div class="product-card">
                        <img src="/images/cuoi ran.png" alt="Móc khóa ran">
                        <div class="price">39.000 vnđ</div>
                        <button class="buy-btn">Mua ngay</button>
                    </div>
                </div>
                <div class="swiper-slide">
                    <div class="product-card">
                        <img src="/images/ei cuoi.png" alt="Móc khóa ">
                        <div class="price">39.000 vnđ</div>
                        <button class="buy-btn">Mua ngay</button>
                    </div>
                </div>
                <div class="swiper-slide">
                    <div class="product-card">
                        <img src="/images/std-thay-do.png" alt="Móc khóa ei">
                        <div class="price">39.000 vnđ</div>
                        <button class="buy-btn">Mua ngay</button>
                    </div>
                </div>
                <div class="swiper-slide">
                    <div class="product-card">
                        <img src="/images/shin.png" alt="Móc khóa shinichi">
                        <div class="price">39.000 vnđ</div>
                        <button class="buy-btn">Mua ngay</button>
                    </div>
                </div>
                <div class="swiper-slide">
